@model GetProductByIdQueryResult

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("UiHeadComponent")


<!-- page wrapper -->
<body>

    <div class="boxed_wrapper">

        @await Component.InvokeAsync("UiPreloadComponent")

        @await Component.InvokeAsync("UiSidebarAndSocialMediaComponent")

        @await Component.InvokeAsync("UiSidebarComponent")

        @await Component.InvokeAsync("UiMobileMenuComponent")

        <section class="page-title centred" style="background-image: url('/bagery-ice-cream-shop-html5-template-2024-08-22-10-34-58-utc/Bagery Pack/Bagery/assets/images/background/page-title.jpg');">
            <div class="auto-container">
                <div class="content-box">
                    <div class="title">
                        <h1>Detaylar</h1>
                    </div>
                    <ul class="bread-crumb clearfix">
                        <li>Detay</li>
                    </ul>
                </div>
            </div>
        </section>

        <section class="single-product">
            <div class="product-details-content" style="background-image: url('/bagery-ice-cream-shop-html5-template-2024-08-22-10-34-58-utc/Bagery Pack/Bagery/assets/images/background/single-shop-1.jpg');">
                <div class="auto-container">
                    <div class="row clearfix">
                        <div class="col-lg-6 col-md-12 col-sm-12 image-column">
                            <div class="bxslider">
                                <div class="slider-content">
                                    <div class="slider-pager">
                                        <ul class="thumb-box">
                                            <li>
                                                <a class="active" data-slide-index="0" href="#"><figure><img src="@Model.ImageUrl1" alt=""></figure></a>
                                            </li>
                                            <li>
                                                <a data-slide-index="1" href="#"><figure><img src="@Model.ImageUrl2" alt=""></figure></a>
                                            </li>
                                            <li>
                                                <a data-slide-index="2" href="#"><figure><img src="@Model.ImageUrl3" alt=""></figure></a>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="product-image">
                                        <figure class="image"><a href="assets/images/resource/shop/shop-single-1.jpg" class="lightbox-image" data-fancybox="gallery"><img src="@Model.ImageUrl" alt=""></a></figure>
                                    </div>
                                </div>
@*                                 <div class="slider-content">
                                    <div class="slider-pager">
                                        <ul class="thumb-box">
                                            <li>
                                                <a class="active" data-slide-index="0" href="#"><figure><img src="@Model.ImageUrl" alt=""></figure></a>
                                            </li>
                                            <li>
                                                <a data-slide-index="1" href="#"><figure><img src="@Model.ImageUrl2" alt=""></figure></a>
                                            </li>
                                            <li>
                                                <a data-slide-index="2" href="#"><figure><img src="@Model.ImageUrl3" alt=""></figure></a>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="product-image">
                                        <figure class="image"><a href="assets/images/resource/shop/shop-single-2.jpg" class="lightbox-image" data-fancybox="gallery"><img src="@Model.ImageUrl1" alt=""></a></figure>
                                    </div>
                                </div>
                                <div class="slider-content">
                                    <div class="slider-pager">
                                        <ul class="thumb-box">
                                            <li>
                                                <a class="active" data-slide-index="0" href="#"><figure><img src="assets/images/resource/shop/single-thumb-1.jpg" alt=""></figure></a>
                                            </li>
                                            <li>
                                                <a data-slide-index="1" href="#"><figure><img src="assets/images/resource/shop/single-thumb-2.jpg" alt=""></figure></a>
                                            </li>
                                            <li>
                                                <a data-slide-index="2" href="#"><figure><img src="assets/images/resource/shop/single-thumb-3.jpg" alt=""></figure></a>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="product-image">
                                        <figure class="image"><a href="assets/images/resource/shop/shop-single-3.jpg" class="lightbox-image" data-fancybox="gallery"><img src="assets/images/resource/shop/shop-single-3.jpg" alt=""></a></figure>
                                    </div>
                                </div> *@
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-12 col-sm-12 content-column">
                            <div class="product-details">
                                <h2>@Model.Title</h2>
                                <h3>₺@Model.Price</h3>
                                <div class="customer-rating clearfix">
                                    <ul class="rating pull-left">
                                        <li><i class="icon-Star"></i></li>
                                        <li><i class="icon-Star"></i></li>
                                        <li><i class="icon-Star"></i></li>
                                        <li><i class="icon-Star"></i></li>
                                        <li><i class="icon-Star"></i></li>
                                    </ul>
                                    <div class="review pull-left">
                                        <a href="shop-details.html">( 1 Customer Review )</a>
                                    </div>
                                </div>
                                <div class="text">
                                    <p>@Model.Description</p>
                                </div>
                                <form asp-action="CreateOrder" asp-controller="Shop" method="post">
                                    <input type="hidden" name="ProductId" value="@Model.Id" />

                                    <div class="addto-cart-box">
                                        <ul class="clearfix">
                                            <li>
                                                <input type="number" name="Quantity" value="1" min="1" />
                                            </li>
                                            <li>
                                                <button type="submit" class="theme-btn-one">
                                                    Sepete Ekle
                                                </button>
                                            </li>
                                        </ul>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="product-discription">
                <div class="auto-container">
                    <div class="tabs-box">
                        <div class="tab-btn-box">
                            <ul class="tab-btns tab-buttons clearfix">
                                <li class="tab-btn active-btn" data-tab="#tab-1">Description</li>
                                <li class="tab-btn active-btn" data-tab="#tab-2">Müşteri İncelemeleri</li>
                            </ul>
                        </div>
                        <div class="tabs-content">
                            <div class="tab active-tab" id="tab-1">
                                <div class="content-box">
                                    <h3>Ürün Açıklaması</h3>
                                    <p>@Model.Description1</p>
                                </div>
                            </div>
                            <div class="tab" id="tab-2">
                                <div class="row clearfix">
                                    <div class="col-lg-6 col-md-6 col-sm-12 review-block">
                                        <div class="customer-review">
                                            <h3>Reviews</h3>
                                            <div class="single-review">
                                                <figure class="image-box"><img src="/bagery-ice-cream-shop-html5-template-2024-08-22-10-34-58-utc/Bagery Pack/Bagery/assets/images/resource/shop/review-1.png" alt=""></figure>
                                                <div class="inner">
                                                    <ul class="rating">
                                                        <li><i class="icon-Star"></i></li>
                                                        <li><i class="icon-Star"></i></li>
                                                        <li><i class="icon-Star"></i></li>
                                                        <li><i class="icon-Star"></i></li>
                                                        <li><i class="icon-Star"></i></li>
                                                    </ul>
                                                    <h5>Eileen Alene<span> - May 2, 2020</span></h5>
                                                    <p>Excepteur sint occaecat cupidatat non proident sunt in culpa  qui officia deserunt mollit anim  est laborum. Sed perspiciatis unde omnis natus.</p>
                                                </div>
                                            </div>
                                            <div class="single-review">
                                                <figure class="image-box"><img src="/bagery-ice-cream-shop-html5-template-2024-08-22-10-34-58-utc/Bagery Pack/Bagery/assets/images/resource/shop/review-2.png" alt=""></figure>
                                                <div class="inner">
                                                    <ul class="rating">
                                                        <li><i class="icon-Star"></i></li>
                                                        <li><i class="icon-Star"></i></li>
                                                        <li><i class="icon-Star"></i></li>
                                                        <li><i class="icon-Star"></i></li>
                                                        <li><i class="icon-Star"></i></li>
                                                    </ul>
                                                    <h5>Jhon Matter<span> - May 1, 2020</span></h5>
                                                    <p>Excepteur sint occaecat cupidatat non proident sunt in culpa  qui officia deserunt mollit anim  est laborum. Sed perspiciatis unde omnis natus.</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-12 comment-column">
                                        <div class="customer-comments">
                                            <h3>Be First To Rate It</h3>
                                            <div class="rating-box clearfix">
                                                <p>Your Rating</p>
                                                <ul class="rating clearfix">
                                                    <li><i class="icon-Star"></i></li>
                                                    <li><i class="icon-Star"></i></li>
                                                    <li><i class="icon-Star"></i></li>
                                                    <li><i class="icon-Star"></i></li>
                                                    <li><i class="icon-Star"></i></li>
                                                </ul>
                                            </div>
                                            <form action="single-shop-1.html" method="post" class="comment-form">
                                                <div class="row clearfix">
                                                    <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                                        <label>Your Review</label>
                                                        <textarea name="message"></textarea>
                                                    </div>
                                                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                                        <label>Your Name</label>
                                                        <input type="text" name="name" required="">
                                                    </div>
                                                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                                        <label>Your Email</label>
                                                        <input type="email" name="email" required="">
                                                    </div>
                                                    <div class="col-lg-12 col-md-12 col-sm-12 form-group message-btn">
                                                        <button type="submit" class="theme-btn-one">Submit Now</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="related-product" style="background-image: url('/bagery-ice-cream-shop-html5-template-2024-08-22-10-34-58-utc/Bagery Pack/Bagery/assets/images/background/shop-2.jpg');">
                <div class="auto-container">
                    <div class="top-title centred">
                        <h2>İlişkili Ürünler</h2>
                    </div>
                    <div class="row clearfix">
                        @foreach (var item in ViewBag.relatedProducts)
                        {
                            <div class="col-lg-3 col-md-6 col-sm-12 shop-block">
                                <div class="shop-block-one">
                                    <div class="inner-box">
                                        <figure class="image-box">
                                            <img src="@item.ImageUrl" alt="">
                                        </figure>
                                        <div class="lower-content">
                                            <span class="price-box">₺@item.Price</span>
                                            <h3><a href="shop-details.html">@item.Description</a></h3>
                                            <ul class="rating clearfix">
                                                <li><i class="icon-Star"></i></li>
                                                <li><i class="icon-Star"></i></li>
                                                <li><i class="icon-Star"></i></li>
                                                <li><i class="icon-Star"></i></li>
                                                <li><i class="icon-Star"></i></li>
                                            </ul>
                                            <div class="cart-btn"><a href="/Shop/CreateOrder/@item.Id" class="theme-btn-two">Sepete Ekle</a></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </section>
         
        @await Component.InvokeAsync("UiFooterComponent")

    </div>

    @await Component.InvokeAsync("UiScriptComponent")

    <script>
        $(document).ready(function () {
            var successMessage = '@TempData["message"]';
            if (successMessage=="order received") {
                swal({
                    title: "Başarılı",
                    text: "Sipariş sepete eklendi!",
                    icon: "success",
                    buttons: {
                        cancel: {
                            text: "Tamam",
                            visible: true,
                            closeModal: true
                        }
                    }
                });
            }
        });
    </script>

</body>
</html>
