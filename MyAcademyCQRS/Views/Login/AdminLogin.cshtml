
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Bagery Yönetici Girişi</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet" />
    <script>
        tailwind.config = {
          darkMode: "class",
          theme: {
            extend: {
              colors: {
                primary: "#f39c12",
                "background-light": "#fdf7f2",
                "background-dark": "#0f172a",
              },
              fontFamily: {
                display: ["Playfair Display", "serif"],
                sans: ["Plus Jakarta Sans", "sans-serif"],
              },
              borderRadius: {
                DEFAULT: "1rem",
              },
            },
          },
        };
    </script>
    <style>
        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
        }

        .font-display {
            font-family: 'Playfair Display', serif;
        }

        body {
            min-height: max(884px, 100dvh);
        }
    </style>
</head>

<body class="bg-background-light dark:bg-background-dark min-h-screen flex items-center justify-center p-6">

    <div class="max-w-md w-full mx-auto bg-white dark:bg-slate-900 rounded-[3rem] shadow-2xl overflow-hidden border-[8px] border-slate-200 dark:border-slate-800 relative">

        <div class="p-8 pt-12 pb-16">

            <!-- Logo & Başlık -->
            <div class="flex flex-col items-center mb-10">
                <div class="bg-primary/10 p-4 rounded-3xl mb-4">
                    <img alt="Bagery Logo" class="w-16 h-16" src="https://lh3.googleusercontent.com/aida-public/AB6AXuC8UewaV3QIYCjWSgqRFwL0N3XMljPtYe9n3A5RZXmwvvj4aRRojOesFigK1lU_Hnw5jywYM52CVFp5fySNUW1OQNFCpftkdYkDa3nc2Rr7kUEFzlEQJzIUQBD2B-6bc6Zhl8sH8RrPSE-i2n_rhI-rOoJaJend_aOTyq08YrugeFURPiEe8peoBTJ8arwaHRfNH21HdWgJTKeCfMCKVCQ6vbEcEun7iXKPZsHfBJ0_b014cocJ-EyaCK6OAMD-oM9Gkc2sD-Xs2bo" />
                </div>
                <h1 class="font-display text-4xl text-slate-800 dark:text-white mb-1">Bagery.</h1>
                <p class="text-slate-500 dark:text-slate-400 font-medium tracking-wide uppercase text-xs">Yönetici Paneli Girişi</p>
            </div>

            <!-- Form -->
            <form method="post" class="space-y-5">

                <div>
                    <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2 px-1">Admin Kullanıcı Adı</label>
                    <div class="relative">
                        <span class="material-icons-outlined absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 text-lg">admin_panel_settings</span>
                        <input name="UserName" class="w-full pl-12 pr-4 py-4 bg-slate-50 dark:bg-slate-800 border-none rounded-2xl focus:ring-2 focus:ring-primary text-slate-900 dark:text-white transition-all" placeholder="örn. yonetici_01" type="text" />
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2 px-1">Şifre</label>
                    <div class="relative">
                        <span class="material-icons-outlined absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 text-lg">lock</span>
                        <input name="Password" class="w-full pl-12 pr-12 py-4 bg-slate-50 dark:bg-slate-800 border-none rounded-2xl focus:ring-2 focus:ring-primary text-slate-900 dark:text-white transition-all" placeholder="••••••••••••" type="password" />
                        <button class="absolute right-4 top-1/2 -translate-y-1/2 text-slate-400" type="button">
                            <span class="material-icons-outlined text-lg">visibility</span>
                        </button>
                    </div>
                </div>

                <div class="flex items-center justify-between px-1">
                    <a class="text-sm font-semibold text-primary hover:underline" href="#">Şifremi Unuttum?</a>
                </div>

                <button class="w-full bg-primary hover:bg-orange-600 text-white font-bold py-4 rounded-2xl shadow-lg shadow-orange-500/30 transition-all active:scale-[0.98] mt-4">
                    Panele Giriş Yap
                </button>

            </form>

            <!-- Footer -->
            <div class="mt-12 text-center">
                <div class="inline-flex items-center px-4 py-2 bg-slate-100 dark:bg-slate-800 rounded-full mb-4">
                    <span class="material-icons-outlined text-green-500 text-sm mr-2">verified_user</span>
                    <span class="text-[10px] font-bold text-slate-500 dark:text-slate-400 uppercase tracking-widest">Uçtan Uca Şifreli Erişim</span>
                </div>
                <p class="text-[11px] text-slate-400 dark:text-slate-500 px-6">
                    Yetkili erişim yalnızca. Tüm aktiviteler güvenlik ve uyum amaçlı kaydedilir.
                </p>
            </div>

        </div>

        <!-- Alt Çizgi -->
        <div class="flex justify-center pb-3">
            <div class="w-32 h-1.5 bg-slate-300 dark:bg-slate-700 rounded-full"></div>
        </div>

    </div>

    <!-- Dark Mode Toggle -->
    <button class="fixed bottom-6 right-6 p-4 bg-white dark:bg-slate-800 rounded-full shadow-xl border border-slate-200 dark:border-slate-700 transition-transform active:scale-95" onclick="document.documentElement.classList.toggle('dark')">
        <span class="material-icons-outlined dark:hidden text-slate-800">dark_mode</span>
        <span class="material-icons-outlined hidden dark:block text-white">light_mode</span>
    </button>

</body>
</html>