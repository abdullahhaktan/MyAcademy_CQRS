
@{
    Layout = null;
}

<!DOCTYPE html>
<html class="light" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Bagery - Welcome</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&amp;family=Playfair+Display:wght@700&amp;display=swap" rel="stylesheet" />
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#F59E0B", // Vibrant Orange from reference
                        secondary: "#D97706",
                        "background-light": "#FFF7ED",
                        "background-dark": "#1C1917",
                    },
                    fontFamily: {
                        display: ["Playfair Display", "serif"],
                        sans: ["Outfit", "sans-serif"],
                    },
                    borderRadius: {
                        DEFAULT: "1rem",
                    },
                },
            },
        };
    </script>
    <style>
        .glass-effect {
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .dark .glass-effect {
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

        .hero-gradient {
            background: linear-gradient(180deg, rgba(245, 158, 11, 0.8) 0%, rgba(245, 158, 11, 1) 100%);
        }

        .pattern-overlay {
            background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.15) 1px, transparent 0);
            background-size: 24px 24px;
        }
    </style>
    <style>
        body {
            min-height: max(884px, 100dvh);
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark font-sans antialiased text-stone-800 dark:text-stone-100">

    <div class="min-h-screen flex items-center justify-center px-4">
        <div class="relative w-full max-w-md rounded-3xl overflow-hidden shadow-2xl bg-primary">

            <!-- Background Effects -->
            <div class="absolute -top-16 -left-16 w-48 h-48 bg-white/10 rounded-full blur-3xl"></div>
            <div class="absolute bottom-0 -right-24 w-72 h-72 bg-orange-400/20 rotate-45 rounded-3xl"></div>
            <div class="absolute inset-0 pattern-overlay pointer-events-none"></div>

            <div class="relative z-10 flex flex-col px-8 py-10">

                <!-- Logo -->
                <div class="flex flex-col items-center mb-8">
                    <div class="w-20 h-20 bg-white dark:bg-stone-800 rounded-2xl flex items-center justify-center shadow-xl mb-4">
                        <span class="material-icons text-primary text-5xl">bakery_dining</span>
                    </div>
                    <h1 class="font-display text-4xl text-white">Bagery.</h1>
                    <p class="text-orange-100 text-xs tracking-widest uppercase mt-2">
                        Premium Sweets & Treats
                    </p>
                </div>

                <!-- Image -->
                <div class="relative mb-8">
                    <img src="https://lh3.googleusercontent.com/aida-public/AB6AXuDw-ozKEL86gM8V4NUTuRHo8Vb9viXq-OV56JUuhR49Snm7dBlhG5EeMV2D9DxVU94GHPj3sZSIhuw009oqdjVQUmLpyETf9xTL38tLdY2Fa3FKqSaHA_JWR2H9MnTA3a1cxcXtcCflGV98brAiJJSKwA1Kex9ujzRRDujk3OtO-Q7Q1OPo_JegldHXb5T4yW11h9uwKZFOmNlJXjgca3D-GRx-PDN_SypKnsizs8iSynFL3b-jkIFSggKN5ZVYZWXuxKVTzN6h5T0"
                         class="w-full h-56 object-cover rounded-2xl shadow-xl"
                         alt="Cake" />

                    <div class="absolute -top-3 right-3 bg-white p-2 rounded-xl shadow">
                        <span class="material-icons text-primary">icecream</span>
                    </div>
                </div>


                <!-- Buttons -->
                <div class="space-y-4">
                    <a href="/Login/CustomerLogin" class="w-full flex items-center justify-between h-14 px-6 rounded-2xl bg-white text-primary font-semibold shadow-lg active:scale-95 transition">
                        <div class="flex items-center gap-3">
                            <span class="material-icons">person</span>
                            Müşteri Girişi
                        </div>
                        <span class="material-icons text-sm">arrow_forward_ios</span>
                    </a>

                    <a href="/Login/AdminLogin" class="w-full flex items-center justify-between h-14 px-6 rounded-2xl glass-effect text-white font-medium active:scale-95 transition">
                        <div class="flex items-center gap-3">
                            <span class="material-icons">admin_panel_settings</span>
                            Admin Girişi
                        </div>
                        <span class="material-icons text-sm opacity-60">lock</span>
                    </a>
                </div>

            </div>
        </div>
    </div>

</body>

</html>