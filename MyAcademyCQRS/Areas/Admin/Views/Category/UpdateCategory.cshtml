@model GetCategoryByIdQueryResult
@{
    ViewBag.Title = "Kategori Güncelle";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="max-w-2xl mx-auto p-8 font-display">

    <div class="bg-white rounded-xl border shadow p-6 space-y-6">

        <h3 class="text-2xl font-black">Kategori Güncelle</h3>

        <form method="post" class="space-y-4">

            <input type="hidden" name="Id" value="@Model.Id" />

            <div>
                <label class="block font-bold mb-1">Kategori Adı</label>
                <input name="Name" value="@Model.Name"
                       class="w-full px-4 py-2 rounded-lg border bg-gray-50" />
            </div>

            <div>
                <label class="block font-bold mb-1">Açıklama</label>
                <textarea name="Description"
                          class="w-full px-4 py-2 rounded-lg border bg-gray-50 h-32">@Model.Description</textarea>
            </div>

            <div>
                <label class="block font-bold mb-1">İkon Class</label>
                <input name="Icon" value="@Model.Icon"
                       class="w-full px-4 py-2 rounded-lg border bg-gray-50" />
            </div>

            <div class="flex gap-3 pt-4">
                <button class="flex-1 bg-primary text-white py-3 rounded-xl font-bold">
                    Güncelle
                </button>

                <a href="/Admin/Category/Index"
                   class="flex-1 text-center py-3 bg-gray-100 rounded-xl font-bold no-underline">
                    Geri Dön
                </a>
            </div>

        </form>

    </div>
</div>
