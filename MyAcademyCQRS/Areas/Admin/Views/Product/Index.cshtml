@model List<GetProductsQueryResult>

@{
    ViewBag.Title = "Ürünler";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 p-8 space-y-8 font-display">

    <div class="flex justify-between items-center">
        <div>
            <h2 class="text-3xl font-black">Ürünler</h2>
            <p class="text-gray-500">Sistemdeki tüm ürünler</p>
        </div>

        <a href="/Admin/Product/CreateProduct"
           class="bg-primary text-white px-6 py-3 rounded-xl font-bold shadow hover:scale-105 transition">
            + Yeni Ürün
        </a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-6">
        @foreach (var item in Model)
        {
            <div class="group bg-white rounded-2xl border shadow-sm overflow-hidden
                    hover:shadow-xl hover:-translate-y-1 transition-all">

                <!-- Ürün Görseli -->
                <div class="w-full h-48 bg-gray-100 overflow-hidden">
                    <img src="@item.ImageUrl"
                         alt="@item.Title"
                         class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
                </div>

                <!-- İçerik -->
                <div class="p-6">
                    <h3 class="font-bold text-lg mb-1 line-clamp-1">
                        @item.Title
                    </h3>

                    <p class="text-sm text-gray-500 mb-4">
                        @item.Category.Name
                    </p>

                    <div class="flex justify-between items-center">
                        <span class="text-xl font-black text-primary">
                            @item.Price ₺
                        </span>

                        <div class="flex gap-2 opacity-0 group-hover:opacity-100 transition">
                            <a href="/Admin/Product/UpdateProduct/@item.Id"
                               class="p-2 rounded-xl bg-primary/10 text-primary hover:bg-primary hover:text-white transition">
                                <span class="material-symbols-outlined">edit</span>
                            </a>

                            <a href="/Admin/Product/DeleteProduct/@item.Id"
                               onclick="return confirm('Silmek istiyor musunuz?')"
                               class="p-2 rounded-xl bg-red-50 text-red-600 hover:bg-red-600 hover:text-white transition">
                                <span class="material-symbols-outlined">delete</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>

</div>
