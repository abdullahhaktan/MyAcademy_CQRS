@model CreateProductCommand

@{
    ViewBag.Title = "Yeni Ürün";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="max-w-6xl mx-auto px-6 py-10">

    <div class="bg-white rounded-2xl shadow border p-10">

        <div class="mb-8">
            <h2 class="text-3xl font-bold text-gray-800">Yeni Ürün Ekle</h2>
            <p class="text-gray-500 mt-1">Yeni bir ürün oluşturmak için bilgileri doldurun</p>
        </div>

        <form method="post" enctype="multipart/form-data" class="space-y-8">

            <!-- Ürün Adı -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Ürün Adı</label>
                <input asp-for="Title"
                       class="w-full border rounded-lg px-4 py-3 focus:ring-2 focus:ring-orange-400 focus:outline-none" />
            </div>

            <!-- Açıklamalar -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Açıklama</label>
                    <textarea asp-for="Description"
                              class="w-full border rounded-lg px-4 py-3 h-32 resize-none focus:ring-2 focus:ring-orange-400 focus:outline-none"></textarea>
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Ek Açıklama</label>
                    <textarea asp-for="Description1"
                              class="w-full border rounded-lg px-4 py-3 h-32 resize-none focus:ring-2 focus:ring-orange-400 focus:outline-none"></textarea>
                </div>
            </div>

            <!-- Fiyat & Kategori -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Fiyat</label>
                    <input asp-for="Price"
                           class="w-full border rounded-lg px-4 py-3 focus:ring-2 focus:ring-orange-400 focus:outline-none" />
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Kategori</label>
                    <select asp-for="CategoryId"
                            asp-items="@ViewBag.categories"
                            class="w-full border rounded-lg px-4 py-3 bg-white focus:ring-2 focus:ring-orange-400 focus:outline-none">
                        <option value="">Kategori Seçiniz</option>
                    </select>
                </div>
            </div>

            <!-- Görseller -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-3">Ürün Görselleri</label>

                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                    <input type="file" name="ImageFile" class="border rounded-lg p-2 w-full" />
                    <input type="file" name="ImageFile1" class="border rounded-lg p-2 w-full" />
                    <input type="file" name="ImageFile2" class="border rounded-lg p-2 w-full" />
                    <input type="file" name="ImageFile3" class="border rounded-lg p-2 w-full" />
                </div>

                <p class="text-xs text-gray-400 mt-2">En fazla 4 adet görsel yükleyebilirsiniz</p>
            </div>

            <!-- Actions -->
            <div class="flex gap-6 pt-8">
                <button class="flex-1 bg-orange-500 hover:bg-orange-600 text-white py-4 rounded-xl font-bold text-lg transition">
                    Kaydet
                </button>

                <a href="/Admin/Product/Index"
                   class="flex-1 text-center py-4 rounded-xl font-bold text-lg bg-gray-100 hover:bg-gray-200 transition">
                    Vazgeç
                </a>
            </div>

        </form>
    </div>
</div>
