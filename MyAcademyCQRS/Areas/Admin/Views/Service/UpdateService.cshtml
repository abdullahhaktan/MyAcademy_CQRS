@model GetServiceByIdQueryResult

@{
    ViewBag.Title = "Hizmet Güncelle";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="max-w-3xl mx-auto p-8 font-display">

    <div class="bg-white dark:bg-[#151b2b] rounded-xl border shadow p-6 space-y-6">

        <div>
            <h2 class="text-2xl font-black">Hizmet Güncelle</h2>
            <p class="text-gray-500 text-sm">Seçilen hizmeti düzenleyin</p>
        </div>

        <form method="post" class="space-y-4">

            <input type="hidden" asp-for="Id" />

            <div>
                <label class="text-sm font-semibold">Başlık</label>
                <input asp-for="Title"
                       class="w-full mt-1 px-4 py-2 rounded-lg border bg-gray-50 dark:bg-gray-800" />
            </div>

            <div>
                <label class="text-sm font-semibold">Açıklama</label>
                <textarea asp-for="Description"
                          class="w-full mt-1 px-4 py-2 rounded-lg border bg-gray-50 dark:bg-gray-800 h-28"></textarea>
            </div>

            <div>
                <label class="text-sm font-semibold">İkon Class</label>
                <input asp-for="IconClass"
                       class="w-full mt-1 px-4 py-2 rounded-lg border bg-gray-50 dark:bg-gray-800" />
            </div>

            <div class="flex gap-3 pt-4">
                <button type="submit"
                        class="flex-1 bg-primary text-white py-3 rounded-xl font-bold">
                    Güncelle
                </button>

                <a href="/Admin/Service/Index"
                   class="flex-1 text-center py-3 bg-gray-100 dark:bg-gray-800 rounded-xl font-bold no-underline">
                    Geri Dön
                </a>
            </div>

        </form>
    </div>
</div>
