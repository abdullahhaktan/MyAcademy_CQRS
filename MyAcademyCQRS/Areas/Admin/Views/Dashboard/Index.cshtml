@model List<GetOrdersQueryResult>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="p-8 overflow-y-auto">
    <div class="mb-8">
        <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Dashboard Overview</h1>
        <p class="text-slate-500 dark:text-slate-400 mt-1">Hoş geldin! İşte bugün olanlar.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white dark:bg-slate-900 p-6 rounded-2xl border border-slate-200 dark:border-slate-800 shadow-sm">
            <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/30 text-blue-600 rounded-xl flex items-center justify-center">
                    <span class="material-icons-round">payments</span>
                </div>
                <span class="text-xs font-semibold text-emerald-500 bg-emerald-100 dark:bg-emerald-900/30 px-2 py-1 rounded-full">+@ViewBag.TotalPriceChange%</span>
            </div>
            <h3 class="text-slate-500 dark:text-slate-400 text-sm font-medium">Toplam Kazanç</h3>
            <p class="text-2xl font-bold text-slate-900 dark:text-white mt-1">₺@ViewBag.TotalPrice</p>
        </div>

        <div class="bg-white dark:bg-slate-900 p-6 rounded-2xl border border-slate-200 dark:border-slate-800 shadow-sm">
            <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/30 text-blue-600 rounded-xl flex items-center justify-center">
                    <span class="material-icons-round">payments</span>
                </div>
                <span class="text-xs font-semibold text-emerald-500 bg-emerald-100 dark:bg-emerald-900/30 px-2 py-1 rounded-full">@ViewBag.TotalPriceLastMonthChange%</span>
            </div>
            <h3 class="text-slate-500 dark:text-slate-400 text-sm font-medium">Son 1 ayın toplam kazancı</h3>
            <p class="text-2xl font-bold text-slate-900 dark:text-white mt-1">₺@ViewBag.TotalPriceLastMonth</p>
        </div>

        <div class="bg-white dark:bg-slate-900 p-6 rounded-2xl border border-slate-200 dark:border-slate-800 shadow-sm">
            <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-orange-100 dark:bg-orange-900/30 text-orange-600 rounded-xl flex items-center justify-center">
                    <span class="material-icons-round">shopping_bag</span>
                </div>
                <span class="text-xs font-semibold text-emerald-500 bg-emerald-100 dark:bg-emerald-900/30 px-2 py-1 rounded-full">@ViewBag.TotalOrderCountChange%</span>
            </div>
            <h3 class="text-slate-500 dark:text-slate-400 text-sm font-medium">Siparişler</h3>
            <p class="text-2xl font-bold text-slate-900 dark:text-white mt-1">@ViewBag.TotalOrderCount</p>
        </div>

        <div class="bg-white dark:bg-slate-900 p-6 rounded-2xl border border-slate-200 dark:border-slate-800 shadow-sm">
            <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900/30 text-purple-600 rounded-xl flex items-center justify-center">
                    <span class="material-icons-round">people</span>
                </div>
                <span class="text-xs font-semibold text-emerald-500 bg-emerald-100 dark:bg-emerald-900/30 px-2 py-1 rounded-full">@ViewBag.TotalUserChange%</span>
            </div>
            <h3 class="text-slate-500 dark:text-slate-400 text-sm font-medium">Toplam Kullanıcı Sayısı</h3>
            <p class="text-2xl font-bold text-slate-900 dark:text-white mt-1">@ViewBag.TotalUserCount</p>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2 bg-white dark:bg-slate-900 rounded-2xl border border-slate-200 dark:border-slate-800 shadow-sm overflow-hidden">
            <div class="p-6 border-b border-slate-100 dark:border-slate-800 flex items-center justify-between">
                <h2 class="font-bold text-slate-900 dark:text-white">Son Siparişler</h2>
                <a href="/Admin/Order/Index" class="text-primary text-sm font-medium hover:underline">Tümünü Gör</a>
            </div>

            <div class="overflow-x-auto">
                <table class="w-full text-left">
                    <thead class="bg-slate-50 dark:bg-slate-800/50">
                        <tr>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-500 uppercase">Order ID</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-500 uppercase">Müşteri</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-500 uppercase">Toplam Tutar</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-500 uppercase">Status</th>
                        </tr>
                    </thead>

                    <tbody class="divide-y divide-slate-100 dark:divide-slate-800">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-slate-50 dark:hover:bg-slate-800/30 transition-colors">
                                <td class="px-6 py-4 text-sm text-slate-500">#@item.Id</td>
                                <td class="px-6 py-4 text-sm font-medium text-slate-900 dark:text-white">
                                    @item.User.FirstName @item.User.LastName
                                </td>
                                <td class="px-6 py-4 text-sm text-slate-900 dark:text-white">
                                    ₺@item.TotalPrice
                                </td>

                                @{
                                    var value = "";
                                    var badgeClass = "";

                                    switch (item.Status.ToLower())
                                    {
                                        case "shipped":
                                            value = "Kargoya Verildi";
                                            badgeClass = "bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400";
                                            break;

                                        case "completed":
                                            value = "Tamamlandı";
                                            badgeClass = "bg-emerald-100 text-emerald-700 dark:bg-emerald-900/30 dark:text-emerald-400";
                                            break;

                                        case "pending":
                                            value = "Beklemede";
                                            badgeClass = "bg-yellow-100 text-yellow-700 dark:bg-yellow-900/30 dark:text-yellow-400";
                                            break;

                                        default:
                                            value = "İptal Edildi";
                                            badgeClass = "bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-400";
                                            break;
                                    }
                                }

                                <td class="px-6 py-4">
                                    <span class="px-2.5 py-1 text-xs font-medium rounded-full @badgeClass">
                                        @value
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="bg-white dark:bg-slate-900 rounded-2xl border border-slate-200 dark:border-slate-800 shadow-sm p-6">
            <h2 class="font-bold text-slate-900 dark:text-white mb-4">
                Kategori Dağılımı
            </h2>

            <div style="height:260px;">
                <canvas id="categoryChart"></canvas>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    const categories = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.Categories));
    const productCounts = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.ProductCounts));

    const ctx = document.getElementById('categoryChart');

    new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: categories,
            datasets: [{
                data: productCounts,
                borderWidth: 0,
                hoverOffset: 12,
                backgroundColor: [
                    '#6366F1',
                    '#22C55E',
                    '#F97316',
                    '#EC4899',
                    '#0EA5E9',
                    '#A855F7',
                ]
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            cutout: '70%',
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        usePointStyle: true,
                        padding: 20,
                        font: {
                            size: 12,
                            weight: '500'
                        }
                    }
                },
                tooltip: {
                    callbacks: {
                        label: function (context) {
                            return ` ${context.label}: ${context.raw} ürün`;
                        }
                    }
                }
            },
            animation: {
                animateScale: true,
                animateRotate: true
            }
        }
    });
</script>
