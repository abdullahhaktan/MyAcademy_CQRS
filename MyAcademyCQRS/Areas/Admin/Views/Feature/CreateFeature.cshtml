@model CreateFeatureCommand
@{
    ViewBag.Title = "Yeni Özellik";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="max-w-xl mx-auto p-8 font-display">

    <div class="bg-white rounded-xl border shadow p-6 space-y-6">

        <h3 class="text-2xl font-black">Yeni Özellik Ekle</h3>

        <form method="post" class="space-y-4">

            <div>
                <label class="block font-bold mb-1">Başlık</label>
                <input asp-for="Title"
                       class="w-full px-4 py-2 rounded-lg border bg-gray-50" />
            </div>

            <div>
                <label class="block font-bold mb-1">Açıklama</label>
                <textarea asp-for="Description"
                          class="w-full px-4 py-2 rounded-lg border bg-gray-50 h-32"></textarea>
            </div>

            <div class="flex gap-3 pt-4">
                <button class="flex-1 bg-primary text-white py-3 rounded-xl font-bold">
                    Kaydet
                </button>

                <a href="/Admin/Feature/Index"
                   class="flex-1 text-center py-3 bg-gray-100 rounded-xl font-bold no-underline">
                    Vazgeç
                </a>
            </div>

        </form>

    </div>
</div>
