@model List<GetBannersQueryResult>
@{
    ViewBag.Title = "Bannerlar";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="p-8 space-y-6 font-display">

    <div class="flex justify-between items-center">
        <h2 class="text-3xl font-black">Bannerlar</h2>

        <a href="/Admin/Banner/CreateBanner"
           class="bg-primary text-white px-6 py-3 rounded-xl font-bold no-underline">
            + Yeni Banner
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
        @foreach (var item in Model)
        {
            <div class="bg-white dark:bg-[#151b2b] rounded-2xl shadow border overflow-hidden group">

                <img src="@item.ImageUrl"
                     class="w-full h-44 object-cover" />

                <div class="p-5 space-y-3">

                    <h4 class="font-bold text-lg">@item.Title</h4>

                    <p class="text-sm text-gray-500 line-clamp-2">
                        @item.Description
                    </p>

                    <div class="flex justify-end gap-2 pt-3 opacity-0 group-hover:opacity-100 transition">
                        <a href="/Admin/Banner/UpdateBanner/@item.Id"
                           class="px-3 py-2 rounded-lg bg-primary/10 text-primary text-sm font-bold">
                            Düzenle
                        </a>

                        <a href="/Admin/Banner/DeleteBanner/@item.Id"
                           onclick="return confirm('Silmek istiyor musunuz?')"
                           class="px-3 py-2 rounded-lg bg-red-100 text-red-600 text-sm font-bold">
                            Sil
                        </a>
                    </div>

                </div>
            </div>
        }
    </div>

</div>
