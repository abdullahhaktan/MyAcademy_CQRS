@model CreateBannerCommand
@{
    ViewBag.Title = "Yeni Banner";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="max-w-xl mx-auto p-8 font-display">

    <div class="bg-white dark:bg-[#151b2b] rounded-2xl shadow border p-6 space-y-6">

        <h3 class="text-2xl font-black">Yeni Banner</h3>

        <form method="post" class="space-y-4">

            <div>
                <label class="block text-sm font-bold mb-1">Başlık</label>
                <input asp-for="Title"
                       class="w-full px-4 py-2 rounded-xl border bg-gray-50 dark:bg-gray-800" />
            </div>

            <div>
                <label class="block text-sm font-bold mb-1">Açıklama</label>
                <textarea asp-for="Description"
                          class="w-full px-4 py-2 rounded-xl border bg-gray-50 dark:bg-gray-800 h-28"></textarea>
            </div>

            <div>
                <label class="block text-sm font-bold mb-1">Görsel URL</label>
                <input asp-for="ImageUrl"
                       class="w-full px-4 py-2 rounded-xl border bg-gray-50 dark:bg-gray-800" />
            </div>

            <div class="flex gap-3 pt-4">
                <button class="flex-1 bg-primary text-white py-3 rounded-xl font-bold">
                    Kaydet
                </button>

                <a href="/Admin/Banner/Index"
                   class="flex-1 text-center py-3 rounded-xl bg-gray-100 dark:bg-gray-800 font-bold">
                    Vazgeç
                </a>
            </div>

        </form>

    </div>
</div>
