@model CreatePromotionCommand
@{
    ViewBag.Title = "Yeni Promosyon";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="max-w-3xl mx-auto p-8 font-display">

    <div class="bg-white rounded-xl border shadow p-6 space-y-6">

        <h3 class="text-2xl font-black">Yeni Promosyon Ekle</h3>

        <form method="post" class="space-y-4">

            <input asp-for="Title"
                   placeholder="Başlık"
                   class="w-full px-4 py-2 rounded-lg border bg-gray-50" />

            <textarea asp-for="Description"
                      placeholder="Açıklama"
                      class="w-full px-4 py-2 rounded-lg border bg-gray-50 h-28"></textarea>

            <input asp-for="ImageUrl"
                   placeholder="Görsel URL"
                   class="w-full px-4 py-2 rounded-lg border bg-gray-50" />

            <input asp-for="Price"
                   placeholder="Fiyat"
                   class="w-full px-4 py-2 rounded-lg border bg-gray-50" />

            <div class="flex gap-3 pt-4">
                <button class="flex-1 bg-primary text-white py-3 rounded-xl font-bold">
                    Kaydet
                </button>

                <a href="/Admin/Promotion/Index"
                   class="flex-1 text-center py-3 bg-gray-100 rounded-xl font-bold no-underline">
                    Vazgeç
                </a>
            </div>

        </form>
    </div>
</div>
