@model List<GetPromotionsQueryResult>
@{
    ViewBag.Title = "Promosyonlar";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 p-8 space-y-6 font-display">

    <div class="flex justify-between items-center">
        <div>
            <h2 class="text-3xl font-black">Promosyonlar</h2>
            <p class="text-gray-500">Tüm kampanya ve promosyonlar</p>
        </div>

        <a href="/Admin/Promotion/CreatePromotion"
           class="bg-primary text-white px-5 py-2.5 rounded-lg font-bold no-underline">
            Yeni Promosyon
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        @foreach (var item in Model)
        {
            <div class="bg-white border rounded-xl shadow p-5 space-y-4">
                <img src="@item.ImageUrl"
                     class="h-40 w-full object-cover rounded-lg" />

                <h3 class="text-lg font-bold">@item.Title</h3>
                <p class="text-sm text-gray-500">@item.Description</p>

                <div class="flex justify-between items-center pt-2">
                    <span class="font-black text-primary">@item.Price ₺</span>

                    <div class="space-x-3 text-sm">
                        <a href="/Admin/Promotion/UpdatePromotion/@item.Id"
                           class="text-primary">Düzenle</a>

                        <a href="/Admin/Promotion/DeletePromotion/@item.Id"
                           onclick="return confirm('Silmek istiyor musunuz?')"
                           class="text-red-600">Sil</a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>
