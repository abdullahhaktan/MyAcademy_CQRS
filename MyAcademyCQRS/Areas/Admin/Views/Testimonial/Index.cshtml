@model List<GetTestimonialsQueryResult>

@{
    ViewBag.Title = "Yorumlar";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 p-8 space-y-6 font-display">

    <div class="flex justify-between items-center">
        <div>
            <h2 class="text-3xl font-black">Müşteri Yorumları</h2>
            <p class="text-gray-500">Kullanıcı geri bildirimleri</p>
        </div>

        <a href="/Admin/Testimonial/CreateTestimonial"
           class="bg-primary text-white px-5 py-2.5 rounded-lg font-bold no-underline">
            Yeni Yorum
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        @foreach (var item in Model)
        {
            <div class="bg-white dark:bg-[#151b2b] rounded-xl border shadow p-6 space-y-4">

                <div class="flex items-center gap-3">
                    <img src="@item.ImageUrl"
                         class="w-12 h-12 rounded-full object-cover" />

                    <div>
                        <p class="font-bold">@item.FullName</p>
                        <p class="text-xs text-gray-500">@item.Title</p>
                    </div>
                </div>

                <p class="text-sm text-gray-600">
                    “@item.Comment”
                </p>

                <div class="flex justify-end gap-2 pt-4">
                    <a href="/Admin/Testimonial/UpdateTestimonial/@item.Id"
                       class="p-2 rounded-lg hover:bg-primary/10 text-primary">
                        <span class="material-symbols-outlined">edit</span>
                    </a>

                    <a href="/Admin/Testimonial/DeleteTestimonial/@item.Id"
                       onclick="return confirm('Silmek istiyor musunuz?')"
                       class="p-2 rounded-lg hover:bg-red-50 text-red-600">
                        <span class="material-symbols-outlined">delete</span>
                    </a>
                </div>

            </div>
        }
    </div>

</div>
