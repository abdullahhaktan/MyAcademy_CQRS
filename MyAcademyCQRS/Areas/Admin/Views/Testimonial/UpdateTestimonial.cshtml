@model GetTestimonialByIdQueryResult

@{
    ViewBag.Title = "Yorum Güncelle";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="max-w-3xl mx-auto p-8 font-display">

    <div class="bg-white dark:bg-[#151b2b] rounded-xl border shadow p-6 space-y-6">

        <h2 class="text-2xl font-black">Yorum Güncelle</h2>

        <form method="post" enctype="multipart/form-data" class="space-y-4">

            <input type="hidden" asp-for="Id" />

            <input asp-for="FullName"
                   class="w-full px-4 py-2 rounded-lg border bg-gray-50 dark:bg-gray-800" />

            <input asp-for="Title"
                   class="w-full px-4 py-2 rounded-lg border bg-gray-50 dark:bg-gray-800" />

            <!-- Images -->
            <div class="space-y-2">
                <label class="text-sm font-semibold text-slate-600 dark:text-slate-300">
                    Referans Görseli
                </label>

                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                    <input type="file" name="ImageFile" class="input file:cursor-pointer" />
                </div>

            </div>

            <textarea asp-for="Comment"
                      class="w-full px-4 py-2 rounded-lg border bg-gray-50 dark:bg-gray-800 h-28"></textarea>

            <div class="flex gap-3 pt-4">
                <button class="flex-1 bg-primary text-white py-3 rounded-xl font-bold">
                    Güncelle
                </button>

                <a href="/Admin/Testimonial/Index"
                   class="flex-1 text-center py-3 bg-gray-100 dark:bg-gray-800 rounded-xl font-bold no-underline">
                    Geri Dön
                </a>
            </div>

        </form>
    </div>
</div>
