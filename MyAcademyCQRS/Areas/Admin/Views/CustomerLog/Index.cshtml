@model List<GetCustomerLogsQueryResult>

@{
    ViewData["Title"] = "Müşteri Logları";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<style>
    body {
        background-color: #f4f6f9;
    }

    .page-title {
        font-weight: 700;
        margin-bottom: 25px;
    }

    .log-card {
        background: #fff;
        border-radius: 16px;
        padding: 18px 20px;
        height: 100%;
        display: flex;
        flex-direction: column;
        transition: all .3s ease;
        border-left: 6px solid #dee2e6;
        position: relative;
    }

    .log-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 15px 35px rgba(0,0,0,.1);
    }

    .log-card.error {
        border-left-color: #dc3545;
    }

    .log-card.warning {
        border-left-color: #ffc107;
    }

    .log-card.info {
        border-left-color: #0d6efd;
    }

    .log-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

    .customer-email {
        font-size: 14px;
        font-weight: 600;
        color: #198754;
        word-break: break-all;
    }

    .log-type {
        font-size: 12px;
        padding: 5px 12px;
        border-radius: 20px;
        font-weight: 500;
    }

    .log-type.info {
        background-color: #e7f1ff;
        color: #0d6efd;
    }

    .log-type.warning {
        background-color: #fff3cd;
        color: #856404;
    }

    .log-type.error {
        background-color: #f8d7da;
        color: #842029;
    }

    .log-action {
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 6px;
        color: #212529;
    }

    .log-desc {
        font-size: 14px;
        color: #6c757d;
        line-height: 1.5;
        flex: 1;
    }

    .log-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 15px;
        font-size: 12px;
        color: #6c757d;
        border-top: 1px dashed #e9ecef;
        padding-top: 10px;
    }

    .log-footer span {
        display: flex;
        align-items: center;
        gap: 4px;
    }
</style>

<div class="container-fluid mt-4">

    <h4 class="page-title">
        👤 Customer Logları
        <span class="text-muted fs-6">(@Model.Count kayıt)</span>
    </h4>

    <div class="row g-4">
        @foreach (var log in Model)
        {
            var typeClass = log.LogType.ToLower();

            <div class="col-xl-4 col-lg-6 col-md-12">
                <div class="log-card @typeClass">

                    <div class="log-header">
                        <span class="customer-email">@log.Email</span>
                        <span class="log-type @typeClass">@log.LogType</span>
                    </div>

                    <div class="log-action">
                        @log.Action
                    </div>

                    <div class="log-desc">
                        @log.Description
                    </div>

                    <div class="log-footer">
                        <span>🌐 @log.IpAddress</span>
                        <span>🕒 @log.CreatedDate.ToString("dd.MM.yyyy HH:mm")</span>
                    </div>

                </div>
            </div>
        }
    </div>

</div>
