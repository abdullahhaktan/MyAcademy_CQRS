@model GetStoryByIdQueryResult

@{
    ViewBag.Title = "Hikaye Güncelle";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="max-w-3xl mx-auto p-8 font-display">
    <div class="bg-white dark:bg-[#151b2b] rounded-2xl shadow-xl border">

        <!-- Header -->
        <div class="p-6 border-b bg-indigo-50 dark:bg-indigo-500/10">
            <h3 class="text-xl font-bold flex items-center gap-2">
                <span class="material-symbols-outlined text-indigo-600">edit</span>
                Hikaye Güncelle
            </h3>
        </div>

        <!-- Form -->
        <div class="p-6">
            <form method="post">
                <input type="hidden" asp-for="Id" />
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-bold mb-1">Açıklama (1)</label>
                        <textarea asp-for="Description" class="w-full px-4 py-2 rounded-lg border bg-gray-50 h-24 resize-none"></textarea>
                    </div>

                    <div>
                        <label class="block text-sm font-bold mb-1">Açıklama (2)</label>
                        <textarea asp-for="Description1" class="w-full px-4 py-2 rounded-lg border bg-gray-50 h-24 resize-none"></textarea>
                    </div>

                    <div>
                        <label class="block text-sm font-bold mb-1">Madde 1</label>
                        <input asp-for="Item1" class="w-full px-4 py-2 rounded-lg border bg-gray-50" />
                    </div>

                    <div>
                        <label class="block text-sm font-bold mb-1">Madde 2</label>
                        <input asp-for="Item2" class="w-full px-4 py-2 rounded-lg border bg-gray-50" />
                    </div>

                    <div>
                        <label class="block text-sm font-bold mb-1">Madde 3</label>
                        <input asp-for="Item3" class="w-full px-4 py-2 rounded-lg border bg-gray-50" />
                    </div>
                </div>

                <div class="flex gap-3 pt-6">
                    <button class="flex-1 bg-indigo-600 text-white py-3 rounded-xl font-bold">
                        Güncelle
                    </button>

                    <a href="/Admin/Story/Index"
                       class="px-6 py-3 bg-gray-100 rounded-xl font-bold no-underline">
                        Geri Dön
                    </a>
                </div>
            </form>
        </div>

    </div>
</div>
