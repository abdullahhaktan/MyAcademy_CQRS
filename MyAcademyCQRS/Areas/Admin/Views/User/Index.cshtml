@model List<GetUsersQueryResult>

@{
    ViewBag.Title = "Kullanıcılar";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 p-8 space-y-8 font-display">

    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h2 class="text-3xl font-black tracking-tight">Kullanıcılar</h2>
            <p class="text-gray-500">Sisteme kayıtlı kullanıcılar</p>
        </div>
    </div>

    <!-- Card Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-6">
        @foreach (var user in Model)
        {
            <div class="group bg-white dark:bg-[#151b2b] rounded-2xl p-6 border shadow-sm
                            hover:shadow-xl hover:-translate-y-1 transition-all duration-300">

                <!-- User Header -->
                <div class="flex items-center gap-4">
                    <img src="@user.ImageUrl"
                         class="w-14 h-14 rounded-full object-cover ring-2 ring-primary/30" />

                    <div>
                        <h3 class="font-bold text-lg leading-tight">
                            @user.FirstName @user.LastName
                        </h3>
                        <p class="text-sm text-gray-500">
                            @@@user.UserName
                        </p>
                    </div>
                </div>

                <!-- Divider -->
                <div class="my-4 h-px bg-gradient-to-r from-transparent via-gray-200 to-transparent"></div>

                <!-- Info -->
                <div class="space-y-2 text-sm">
                    <div class="flex justify-between">
                        <span class="text-gray-500">Email</span>
                        <span class="font-medium truncate max-w-[180px]">
                            @user.Email
                        </span>
                    </div>

                    <div class="flex justify-between">
                        <span class="text-gray-500">Kayıt Tarihi</span>
                        <span class="font-medium">
                            @user.CreatedDate.ToShortDateString()
                        </span>
                    </div>
                </div>

                <!-- Actions -->
                <div class="mt-6 flex justify-end gap-2 opacity-0 group-hover:opacity-100 transition">
                    <a href="/Admin/User/DeleteUser/@user.Id"
                       onclick="return confirm('Silmek istiyor musunuz?')"
                       class="p-2 rounded-xl bg-red-50 text-red-600 hover:bg-red-600 hover:text-white transition">
                        <span class="material-symbols-outlined">Sil</span>
                    </a>
                </div>

            </div>
        }
    </div>

</div>
