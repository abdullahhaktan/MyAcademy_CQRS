@{
    Layout = null;
}

<!DOCTYPE html>
<html class="light" lang="tr">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Bagery - Kullanıcı Hesabı</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&amp;family=Playfair+Display:wght@700;900&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet" />
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#F97316", // Warm Orange from Bagery brand
                        "background-light": "#FFFBF7", // Creamy background
                        "background-dark": "#121212",
                        secondary: "#D97706",
                        accent: "#FDE68A",
                    },
                    fontFamily: {
                        sans: ["Plus Jakarta Sans", "sans-serif"],
                        display: ["Playfair Display", "serif"],
                    },
                    borderRadius: {
                        DEFAULT: "0.75rem",
                    },
                },
            },
        };
    </script>
    <style>
        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
        }

        .font-display {
            font-family: 'Playfair Display', serif;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark text-slate-800 dark:text-slate-200 min-h-screen transition-colors duration-300">
    <header class="sticky top-0 z-50 bg-white/80 dark:bg-black/80 backdrop-blur-md border-b border-orange-100 dark:border-slate-800">
        <div class="max-w-7xl mx-auto px-4 h-20 flex items-center justify-between">
            <div class="flex items-center gap-2">
                <div class="w-10 h-10 bg-primary rounded-full flex items-center justify-center text-white">
                    <span class="material-icons-outlined">bakery_dining</span>
                </div>
                <span class="text-2xl font-display font-bold text-primary tracking-tight">Bagery.</span>
            </div>
            <div class="hidden md:flex flex-1 max-w-md mx-8">
                <div class="relative w-full">
                    <span class="absolute inset-y-0 left-3 flex items-center text-slate-400">
                        <span class="material-icons-outlined text-xl">search</span>
                    </span>
                    <input class="w-full pl-10 pr-4 py-2 bg-orange-50/50 dark:bg-slate-900 border-none rounded-full focus:ring-2 focus:ring-primary/50 transition-all text-sm" placeholder="Lezzet ara..." type="text" />
                </div>
            </div>
            <div class="flex items-center gap-4">
                <button class="p-2 text-slate-600 dark:text-slate-400 hover:text-primary transition-colors">
                    <span class="material-icons-outlined">notifications</span>
                </button>
                <div class="relative">
                    <a href="/User/Cart/Index" class="p-2 text-slate-600 dark:text-slate-400 hover:text-primary transition-colors">
                        <span class="material-icons-outlined">shopping_basket</span>
                    </a>
                    <span class="absolute top-1 right-1 bg-primary text-white text-[10px] font-bold px-1.5 py-0.5 rounded-full">@(ViewBag.orderItemsCount != null ? ViewBag.orderItemsCount : "")</span>
                </div>
                <div class="flex items-center gap-3 ml-2 pl-4 border-l border-orange-100 dark:border-slate-800">
                    <div class="text-right hidden sm:block">
                        <p class="text-sm font-semibold leading-none">@ViewBag.fullName</p>
                    </div>
                    <img alt="Profil Fotoğrafı" class="w-10 h-10 rounded-full border-2 border-orange-200 dark:border-slate-700" src="https://lh3.googleusercontent.com/aida-public/AB6AXuDgdGtZuvZkPz0_Lb8Ojw4Tnb5gGx8lfoN9drY9DondjBI7xWDGoNsyk7WUaH8JsMGX5V-NCgQ7OFuy9qU5ROuCRTUK1lB99ccFv6rNA_CHViqCQ_yE8Go2vG6c8QihVIPM5TUSdbl7n3vPUDg9c3vLUmRCtBvl1KdaoJ7bemH-ZVFgmRJht9yVWtvYmYVKBxNdd8D14wHIHiD35ef9j6H86JGk612PED8jfcY5ESkkbh5IxxJx88NsAgkWIYeSqQJvPHq7DVu4ueY" />
                </div>
            </div>
        </div>
    </header>
    <div class="max-w-7xl mx-auto px-4 py-8 flex flex-col lg:flex-row gap-8">
        <aside class="w-full lg:w-72 flex-shrink-0">
            <nav id="main-sidebar" class="space-y-1">
                <p class="px-4 text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-4">Hesap Menüsü</p>

                <a class="nav-link flex items-center gap-3 px-4 py-3 rounded-xl transition-all group border border-dashed border-orange-200 dark:border-slate-700 mb-4 hover:border-primary/50" href="/Default/Index">
                    <span class="material-icons-outlined text-primary group-hover:scale-110 transition-transform">storefront</span>
                    <span class="font-semibold text-slate-700 dark:text-slate-200 group-hover:text-primary">Siteye Git</span>
                </a>

                <a class="nav-link flex items-center gap-3 px-4 py-3 rounded-xl transition-all group" href="/User/Dashboard/Index">
                    <span class="material-icons-outlined">dashboard</span>
                    <span class="font-medium">Dashboard</span>
                </a>

                <a class="nav-link flex items-center gap-3 px-4 py-3 rounded-xl transition-all group" href="/User/Profile/Index">
                    <span class="material-icons-outlined group-hover:text-primary transition-colors">person</span>
                    <span class="font-medium group-hover:text-primary transition-colors">Profil Bilgilerim</span>
                </a>

                <a class="nav-link flex items-center gap-3 px-4 py-3 rounded-xl transition-all group" href="/User/Cart/Index">
                    <span class="material-icons-outlined group-hover:text-primary transition-colors">shopping_cart</span>
                    <span class="font-medium group-hover:text-primary transition-colors">Sepetim</span>
                </a>

                <a class="nav-link flex items-center gap-3 px-4 py-3 rounded-xl transition-all group" href="/User/Order/Index">
                    <span class="material-icons-outlined group-hover:text-primary transition-colors">shopping_bag</span>
                    <span class="font-medium group-hover:text-primary transition-colors">Siparişlerim</span>
                </a>

                <div class="pt-6 mt-6 border-t border-orange-100 dark:border-slate-800">
                    <a class="flex items-center gap-3 px-4 py-3 text-red-500 hover:bg-red-50 dark:hover:bg-red-900/10 rounded-xl transition-all" href="/Login/Logout">
                        <span class="material-icons-outlined">logout</span>
                        <span class="font-medium">Güvenli Çıkış</span>
                    </a>
                </div>
            </nav>
        </aside>

        <script>
            document.addEventListener("DOMContentLoaded", function() {
                const navLinks = document.querySelectorAll('.nav-link');
                const currentPath = window.location.pathname;

                // Uygulanacak sınıflar
                const activeClasses = ['bg-primary', 'text-white', 'shadow-lg', 'shadow-primary/20'];
                const inactiveClasses = ['text-slate-600', 'dark:text-slate-400', 'hover:bg-orange-50', 'dark:hover:bg-slate-900'];

                navLinks.forEach(link => {
                    // Mevcut URL ile href eşleşiyor mu kontrol et
                    // Not: Eğer alt sayfalardaysan (örn: /User/Orders/Detail) .includes() kullanabilirsin
                    if (currentPath.includes(link.getAttribute('href')) && link.getAttribute('href') !== "#") {
                        link.classList.add(...activeClasses);
                        // Hover efektlerini aktifken kapatmak için ikon ve metin renklerini de yönetebilirsin
                    } else {
                        link.classList.add(...inactiveClasses);
                    }
                });
            });
        </script>

        <div class="flex-1">
            @RenderBody()
        </div>

    </div>
    <footer class="mt-12 border-t border-orange-100 dark:border-slate-800 py-8">
        <div class="max-w-7xl mx-auto px-4 flex flex-col md:flex-row justify-between items-center gap-4">
            <p class="text-sm text-slate-500">© 2024 Bagery Confectionery. Tüm hakları saklıdır.</p>
            <div class="flex gap-6">
                <a class="text-xs text-slate-400 hover:text-primary transition-colors" href="#">Kullanım Koşulları</a>
                <a class="text-xs text-slate-400 hover:text-primary transition-colors" href="#">Gizlilik Politikası</a>
                <a class="text-xs text-slate-400 hover:text-primary transition-colors" href="#">Destek Hattı</a>
            </div>
        </div>
    </footer>
    <button class="fixed bottom-6 right-6 w-12 h-12 bg-white dark:bg-slate-800 border border-orange-100 dark:border-slate-700 rounded-full shadow-xl flex items-center justify-center text-slate-600 dark:text-slate-200 hover:scale-110 transition-all z-[100]" onclick="document.documentElement.classList.toggle('dark')">
        <span class="material-icons-outlined dark:hidden">dark_mode</span>
        <span class="material-icons-outlined hidden dark:block">light_mode</span>
    </button>

</body>
</html>