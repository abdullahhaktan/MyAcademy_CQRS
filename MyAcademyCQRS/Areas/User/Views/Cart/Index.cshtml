@model GetCartByUserQueryResult

@{
    ViewData["Title"] = "Sepetim";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
}

<main class="flex-1 space-y-8">

    <!-- Page Header -->
    <section>
        <h1 class="text-3xl font-display font-bold mb-2">Sepetim 🛒</h1>
        <p class="text-slate-500 dark:text-slate-400">
            Sepetindeki ürünleri gözden geçir ve siparişini tamamla
        </p>
    </section>

    @if (Model == null || !Model.OrderItems.Any())
    {
        <!-- Empty Cart -->
        <section class="bg-white dark:bg-slate-900 rounded-3xl p-12 text-center border border-orange-50 dark:border-slate-800">
            <div class="w-20 h-20 mx-auto bg-orange-100 dark:bg-orange-900/30 text-primary rounded-full flex items-center justify-center mb-6">
                <span class="material-icons-outlined text-4xl">shopping_cart</span>
            </div>
            <h2 class="text-xl font-bold mb-2">Sepetin boş</h2>
            <p class="text-slate-500 mb-6">
                Biraz lezzet eklemeye ne dersin?
            </p>
            <a href="/Shop/Index" class="inline-flex items-center gap-2 bg-primary text-white px-6 py-3 rounded-2xl font-semibold hover:bg-secondary transition">
                Alışverişe Devam Et
                <span class="material-icons-outlined text-sm">arrow_forward</span>
            </a>
        </section>
    }
    else
    {
        <div class="grid grid-cols-1 xl:grid-cols-3 gap-8">

            <!-- CART ITEMS -->
            <section class="xl:col-span-2 space-y-4">

                @foreach (var item in Model.OrderItems)
                {
                    <div class="bg-white dark:bg-slate-900 rounded-3xl p-5 border border-orange-50 dark:border-slate-800 flex gap-6 items-center">

                        <!-- Product Image -->
                        <img src="@item.Product.ImageUrl"
                             alt="@item.Product.Title"
                             class="w-24 h-24 rounded-2xl object-cover" />

                        <!-- Info -->
                        <div class="flex-1">
                            <h3 class="font-semibold text-lg">@item.Product.Title</h3>
                            <p class="text-sm text-slate-500">
                                Birim Fiyat: <span class="font-medium">@item.UnitPrice.ToString("₺0.00")</span>
                            </p>
                        </div>

                        <!-- Quantity -->
                        <div class="flex items-center gap-3">
                            <span class="font-semibold w-6 text-center">@item.Quantity Adet</span>
                        </div>

                        <!-- Price -->
                        <div class="text-right min-w-[90px]">
                            <p class="font-bold text-lg text-primary">
                                @(item.UnitPrice* item.Quantity)
                            </p>
                            <a href="/User/Cart/RemoveOrderItem/@item.Id" class="text-xs text-red-500 hover:underline mt-1">
                                Kaldır
                            </a>
                        </div>

                    </div>
                }

            </section>

            <!-- SUMMARY -->
            <aside class="bg-white dark:bg-slate-900 rounded-3xl p-6 border border-orange-50 dark:border-slate-800 h-fit sticky top-28 space-y-6">

                <h2 class="text-xl font-display font-bold">Sipariş Özeti</h2>

                @{
                    var araToplam = Model.OrderItems.Sum(x => x.UnitPrice * x.Quantity);
                    var kargo = araToplam > 300 ? 0 : 39;
                    var toplam = araToplam + kargo;
                }

                <div class="space-y-3 text-sm">
                    <div class="flex justify-between">
                        <span>Ara Toplam</span>
                        <span>@araToplam.ToString("₺0.00")</span>
                    </div>
                    <div class="flex justify-between">
                        <span>Kargo</span>
                        <span>
                            @(kargo == 0 ? "Ücretsiz" : kargo.ToString("₺0.00"))
                        </span>
                    </div>
                    <div class="border-t pt-3 flex justify-between font-bold text-lg">
                        <span>Toplam</span>
                        <span class="text-primary">@toplam.ToString("₺0.00")</span>
                    </div>
                </div>

                <a href="/User/Cart/ApproveOrder/@Model.Id" class="w-full bg-primary hover:bg-secondary text-white py-4 rounded-2xl font-bold shadow-lg shadow-primary/20 transition-all flex items-center justify-center gap-2">
                    Siparişi Tamamla
                </a>

            </aside>

        </div>
    }

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    
    <script>
        $(document).ready(function () {
           var successMessage = '@TempData["message"]';
           if (successMessage == "mail sent") {
                swal({
                    title: "Başarılı",
                    text: "Siparişiniz Alındı Detaylar Mail Olarak Gönderildi!",
                    icon: "success",
                    buttons: {
                        cancel: {
                            text: "Tamam",
                            visible: true,
                            closeModal: true
                         }
                      }
                });
           }
        });
    </script>

</main>

